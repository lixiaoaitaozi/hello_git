<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <include layout="@layout/title_statu_layout" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_main_title_no_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/app_name"
                android:textColor="@color/red"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/tv_main_title_to_login_activity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="登录"
                android:textColor="@color/red"
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_main_title_is_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_main_title_to_camera_activity"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="6dp"
                android:padding="10dp"
                android:src="@drawable/camera" />

            <ImageView
                android:id="@+id/iv_main_title_to_me_activity"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="6dp"
                android:padding="10dp"
                android:src="@drawable/to_see_me_more" />

            <TextView
                android:id="@+id/tv_main_title_find"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="发现"
                android:textColor="@color/black"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/tv_main_title_love"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="26dp"
                android:layout_toLeftOf="@+id/tv_main_title_find"
                android:gravity="center"
                android:text="关注"
                android:textColor="@color/black"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/tv_main_title_same_city"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="26dp"
                android:layout_toRightOf="@+id/tv_main_title_find"
                android:gravity="center"
                android:text="同城"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </RelativeLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />
</LinearLayout>