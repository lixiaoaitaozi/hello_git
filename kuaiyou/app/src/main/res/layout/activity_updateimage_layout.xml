<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/activity_title" />

    <ImageView
        android:id="@+id/iv_show_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:background="@drawable/ic_launcher" />

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/iv_show_image"
        android:layout_marginTop="10dp"
        android:background="@color/gray" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/iv_show_image"
        android:layout_marginTop="22dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_gaosimohu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@color/gray"
                android:gravity="center"
                android:padding="3dp"
                android:text="高斯模糊"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/tv_nuanseqingdiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@color/gray"
                android:gravity="center"
                android:padding="3dp"
                android:text="暖色情调"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/tv_fenhonghuiyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@color/gray"
                android:gravity="center"
                android:padding="3dp"
                android:text="粉红回忆"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/tv_heibaijiaocuo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@color/gray"
                android:gravity="center"
                android:padding="3dp"
                android:text="黑白交错"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/tv_tianjiawenzi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@color/gray"
                android:gravity="center"
                android:padding="3dp"
                android:text="添加文字"
                android:textSize="22dp" />

        </LinearLayout>


    </HorizontalScrollView>
</RelativeLayout>