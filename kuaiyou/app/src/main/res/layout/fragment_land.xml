<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.china.kuaiyou.activity.fragments.LandFragment">

    <!--1-->
    <LinearLayout style="@style/login_big_layout_style">

        <View style="@style/login_blank_view_style" />

        <LinearLayout style="@style/login_out_layout_style">

            <LinearLayout style="@style/login_layout_style">

                <Button
                    android:id="@+id/area_show_view"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:text="+ 86" />

                <View
                    android:layout_width="0.2dp"
                    android:layout_height="fill_parent"
                    android:background="@color/userupdate_bj" />

                <com.china.kuaiyou.activity.view.ClearEditText
                    android:id="@+id/phone_text_view"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="4"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:inputType="number"
                    android:paddingLeft="8dp" />

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dp"
                android:background="@color/userupdate_bj" />
        </LinearLayout>

        <View style="@style/login_blank_view_style" />
    </LinearLayout>

    <!--2-->
    <LinearLayout style="@style/login_big_layout_style">

        <View style="@style/login_blank_view_style" />

        <LinearLayout style="@style/login_out_layout_style">

            <LinearLayout style="@style/login_layout_style">

                <com.china.kuaiyou.activity.view.ClearEditText
                    android:id="@+id/password_text_view"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="7"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:inputType="textPassword" />

                <CheckBox
                    android:id="@+id/pass_show_hide_view"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/pass_show_hide_style"
                    android:button="@null" />

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dp"
                android:background="@color/userupdate_bj" />
        </LinearLayout>

        <View style="@style/login_blank_view_style" />
    </LinearLayout>

    <!--3-->
    <LinearLayout style="@style/login_big_layout_style">

        <View style="@style/login_blank_view_style" />

        <LinearLayout
            style="@style/login_out_layout_style"
            android:gravity="center">

            <Button
                android:id="@+id/land_button"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/button_gray_style"
                android:text="登录"
                android:textColor="@color/white" />
        </LinearLayout>

        <View style="@style/login_blank_view_style" />
    </LinearLayout>
    <!--4-->
    <LinearLayout
        style="@style/login_big_layout_style"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/forget_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="忘记密码?" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_gravity="bottom">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <View style="@style/login_blank_view_style" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="7"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/weichat_image_view"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:src="@mipmap/ic_launcher" />

                    <ImageView
                        android:id="@+id/qq_image_view"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:src="@mipmap/ic_launcher" />


                    <ImageView
                        android:id="@+id/more_image_view"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:src="@mipmap/ic_launcher" />

                    <ImageView
                        android:id="@+id/email_image_view"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:src="@mipmap/ic_launcher"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/sina_image_view"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:src="@mipmap/ic_launcher"
                        android:visibility="gone" />
                </LinearLayout>

                <View style="@style/login_blank_view_style" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
